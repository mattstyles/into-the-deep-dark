{
  "name": "into-the-deep-dark",
  "version": "0.0.0",
  "description": "Minimalist text based game",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "clean": "rimraf dist && mkdirp dist",
    "lint": "standard",
    "build-scripts": "NODE_PATH=src NODE_ENV=production browserify --extension=jsx src/main.js | uglifyjs -cm > dist/main.js",
    "build-styles": "lessc src/styles.less --include-path=node_modules:src/core/styles:src --autoprefix='last 2 versions' --clean-css > dist/styles.css",
    "build-html": "cpy src/*.html dist",
    "prebuild": "npm run clean",
    "build": "npm run build-scripts && npm run build-styles && npm run build-html",
    "start": "DEBUG=true NODE_PATH=src bin/start"
  },
  "babel": {
    "presets": [
      "urban"
    ],
    "plugins": [
      "transform-react-require",
      "lodash",
      "styled-jsx/babel"
    ]
  },
  "browserify": {
    "transform": [
      "babelify",
      "envify"
    ]
  },
  "standard": {
    "parser": "babel-eslint"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mattstyles/into-the-deep-dark.git"
  },
  "keywords": [
    "game",
    "most",
    "text"
  ],
  "author": "Matt Styles",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/mattstyles/into-the-deep-dark/issues"
  },
  "homepage": "https://github.com/mattstyles/into-the-deep-dark#readme",
  "devDependencies": {
    "babel-eslint": "^7.0.0",
    "babel-plugin-inferno": "^0.7.7",
    "babel-plugin-transform-react-require": "^1.0.1",
    "babel-preset-urban": "^1.0.0",
    "babelify": "^7.3.0",
    "browserify": "^14.1.0",
    "budo": "^9.2.1",
    "cpy-cli": "^1.0.1",
    "envify": "^4.0.0",
    "less": "^2.7.1",
    "less-plugin-autoprefix": "^1.5.1",
    "less-plugin-clean-css": "^1.5.1",
    "minimist": "^1.2.0",
    "mkdirp": "^0.5.1",
    "rimraf": "^2.5.4",
    "simple-less-middleware": "^1.1.0",
    "standard": "^9.0.1",
    "styled-jsx": "^0.5.7"
  },
  "dependencies": {
    "axios": "^0.15.3",
    "babel-plugin-lodash": "^3.2.11",
    "classnames": "^2.2.5",
    "eventemitter3": "^1.2.0",
    "lodash": "^4.17.4",
    "most": "^1.3.0",
    "raid": "^2.5.0",
    "raid-addons": "^2.5.0",
    "raid-navigator": "^2.6.0",
    "react": "^15.5.4",
    "react-dom": "^15.5.4",
    "react-helmet": "^5.0.3",
    "to-map": "^1.0.0"
  }
}
