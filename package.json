{
  "name": "@idd/monorepo",
  "private": true,
  "version": "0.0.0",
  "description": "The deepest and the darkest monorepo",
  "scripts": {
    "clean": "lerna clean",
    "setup": "lerna bootstrap --concurrency=1",
    "precommit": "lerna run lint",
    "test": "lerna run test",
    "dev": "lerna-watch app",
    "start": "yarn workspace app start"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mattstyles/into-the-deep-dark.git"
  },
  "author": "Matt Styles",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mattstyles/into-the-deep-dark/issues"
  },
  "homepage": "https://github.com/mattstyles/into-the-deep-dark#readme",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "standard"
    ]
  },
  "standard": {
    "parser": "babel-eslint",
    "ignore": [
      "**/node_modules/**",
      "**/lib/"
    ]
  },
  "devDependencies": {
    "babel-eslint": "^10.1.0",
    "create-raid-app": "^6.0.1",
    "husky": "^4.2.5",
    "lerna": "^3.22.1",
    "lerna-watch": "^1.0.0-alpha.2",
    "lint-staged": "^10.2.11",
    "standard": "^14.3.4"
  }
}
