{
  "name": "@idd/monorepo",
  "private": true,
  "version": "0.0.0",
  "description": "The deepest and the darkest monorepo",
  "main": "index.js",
  "scripts": {
    "clean": "lerna clean",
    "setup": "lerna bootstrap --concurrency=1",
    "precommit": "lerna run lint",
    "test": "lerna run test",
    "dev": "lerna-watch app",
    "start": "yarn workspace app start"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mattstyles/into-the-deep-dark.git"
  },
  "author": "Matt Styles",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mattstyles/into-the-deep-dark/issues"
  },
  "homepage": "https://github.com/mattstyles/into-the-deep-dark#readme",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "standard"
    ]
  },
  "standard": {
    "parser": "babel-eslint",
    "ignore": [
      "**/node_modules/**",
      "**/lib/"
    ]
  },
  "babel": {
    "presets": [
      "@babel/preset-env",
      "@babel/preset-react"
    ],
    "plugins": [
      "styled-components",
      "transform-react-require",
      [
        "@babel/plugin-proposal-class-properties",
        {
          "loose": false
        }
      ]
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.10.3",
    "@babel/plugin-proposal-class-properties": "^7.10.1",
    "@babel/preset-env": "^7.10.3",
    "@babel/preset-react": "^7.10.1",
    "babel-eslint": "^10.1.0",
    "babel-plugin-styled-components": "^1.10.7",
    "babel-plugin-transform-react-require": "^1.0.1",
    "husky": "^4.2.5",
    "lerna": "^3.22.1",
    "lerna-watch": "^1.0.0-alpha.2",
    "lint-staged": "^10.2.11",
    "rollup": "^2.18.1",
    "rollup-plugin-filesize": "^9.0.1",
    "rollup-plugin-terser": "^6.1.0",
    "standard": "^14.3.4"
  },
  "dependencies": {
    "@rollup/plugin-babel": "^5.0.4"
  }
}
